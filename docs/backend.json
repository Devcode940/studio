
{
  "entities": {
    "Representative": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Representative",
      "type": "object",
      "description": "Represents an elected official, from President to MCA (Member of County Assembly).",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the Representative entity." },
        "slug": { "type": "string", "description": "URL-friendly identifier." },
        "name": { "type": "string" },
        "photoUrl": { "type": "string", "format": "uri" },
        "position": { "type": "string", "enum": ["President", "Deputy President", "Governor", "Senator", "MP", "MCA", "Women Rep"] },
        "constituencyOrWard": { "type": "string" },
        "county": { "type": "string" },
        "party": { "type": "string" },
        "votesGarnered": { "type": "number" },
        "participationRecordSummary": { "type": "string" },
        "contactInfo": {
          "type": "object",
          "properties": {
            "phone": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "officeAddress": { "type": "string" },
            "twitter": { "type": "string" },
            "facebook": { "type": "string", "format": "uri" }
          }
        }
      },
      "required": ["id", "slug", "name", "position", "county", "party"]
    },
    "PerformanceMetric": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PerformanceMetric",
      "type": "object",
      "description": "Key performance indicators for each representative.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "value": { "type": ["string", "number"] },
        "unit": { "type": "string" },
        "description": { "type": "string" },
        "source": { "type": "string" },
        "trend": { "type": "string", "enum": ["up", "down", "stable"] }
      },
      "required": ["id", "name", "value"]
    },
    "IntegrityReport": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "IntegrityReport",
      "type": "object",
      "description": "AI-generated summary of verified saga/scandal information for a representative.",
      "properties": {
        "id": { "type": "string" },
        "reportSummary": { "type": "string" },
        "reportDate": { "type": "string", "format": "date-time" },
        "sourceUrls": { "type": "array", "items": { "type": "string", "format": "uri" } }
      },
      "required": ["id", "reportSummary", "reportDate"]
    },
    "LeaderboardEntry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "LeaderboardEntry",
      "type": "object",
      "description": "Entry in the leaderboard, extending the Representative profile.",
      "allOf": [{ "$ref": "#/entities/Representative" }],
      "properties": {
        "rank": { "type": "number" },
        "overallScore": { "type": "number" },
        "performanceScore": { "type": "number" },
        "integrityScore": { "type": "number" }
      },
      "required": ["rank", "overallScore"]
    },
    "CountyGdp": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CountyGdp",
      "type": "object",
      "description": "Gross Domestic Product data for each county.",
      "properties": {
        "id": { "type": "string" },
        "county": { "type": "string" },
        "gdpMillionsKsh": { "type": "number" },
        "gdpPerCapitaKsh": { "type": "number" },
        "year": { "type": "number" }
      },
      "required": ["id", "county", "gdpMillionsKsh", "year"]
    },
    "CensusData": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CensusData",
      "type": "object",
      "description": "Kenyan census data.",
      "properties": {
        "id": { "type": "string" },
        "county": { "type": "string" },
        "totalPopulation": { "type": "number" },
        "malePopulation": { "type": "number" },
        "femalePopulation": { "type": "number" },
        "householdCount": { "type": "number" },
        "averageHouseholdSize": { "type": "number" },
        "populationDensity": { "type": "number" },
        "year": { "type": "number" }
      },
      "required": ["id", "county", "totalPopulation", "year"]
    },
    "Highlight": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Highlight",
      "type": "object",
      "description": "Highlights key achievements, significant votes, or important statements made by representatives.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "category": { "type": "string", "enum": ["Achievement", "Significant Vote", "Important Statement", "Project Launch"] },
        "sourceUrl": { "type": "string", "format": "uri" }
      },
      "required": ["id", "title", "date", "description", "category"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/representatives/{representativeId}": {
      "schema": { "$ref": "#/entities/Representative" },
      "description": "Stores profiles of elected representatives. Data is publicly accessible."
    },
    "/representatives/{representativeId}/performance_metrics/{metricId}": {
      "schema": { "$ref": "#/entities/PerformanceMetric" },
      "description": "Stores performance metrics for each representative. Data is publicly accessible."
    },
    "/representatives/{representativeId}/integrity_reports/{reportId}": {
      "schema": { "$ref": "#/entities/IntegrityReport" },
      "description": "Stores integrity reports for each representative. Data is publicly accessible."
    },
    "/representatives/{representativeId}/highlights/{highlightId}": {
      "schema": { "$ref": "#/entities/Highlight" },
      "description": "Stores highlights for each representative. Data is publicly accessible."
    },
    "/leaderboard_entries/{leaderboardEntryId}": {
      "schema": { "$ref": "#/entities/LeaderboardEntry" },
      "description": "Stores entries for the leaderboard, which are denormalized representative profiles with ranking scores. Data is publicly accessible."
    },
    "/county_gdp/{countyGdpId}": {
      "schema": { "$ref": "#/entities/CountyGdp" },
      "description": "Stores GDP data for each county. Data is publicly accessible."
    },
    "/census_data/{censusDataId}": {
      "schema": { "$ref": "#/entities/CensusData" },
      "description": "Stores census data. Data is publicly accessible."
    }
  }
}
